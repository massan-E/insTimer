<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <%= link_to root_path, class: "text-2xl font-light text-[#1a1a1a] hover:text-[#de4848] transition-colors duration-200" do %>
          InsTimer
        <% end %>
      </div>
      
      <nav class="flex items-center gap-6">
        <% if current_user %>
          <%= link_to edit_user_registration_path, 
              class: "text-gray-600 hover:text-[#de4848] transition-colors duration-200" do %>
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <%= current_user.email %>
            </span>
          <% end %>
          
          <%= button_to destroy_user_session_path, method: :delete,
              class: "text-gray-600 hover:text-[#de4848] transition-colors duration-200 flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
            </svg>
            ログアウト
          <% end %>
        <% else %>
          <%= link_to "ログイン", new_user_session_path, 
              class: "text-gray-600 hover:text-[#de4848] transition-colors duration-200" %>
          <%= link_to "ユーザー登録", new_user_registration_path, 
              class: "px-4 py-2 bg-[#de4848] text-white rounded-lg hover:bg-[#c43d3d] transition-colors duration-200" %>
        <% end %>
        
        <%= link_to new_countdown_path,
            class: "px-4 py-2 bg-gray-800 text-white rounded-lg hover:bg-gray-700 transition-colors duration-200 ml-4" do %>
          <span class="flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            New Countdown
          </span>
        <% end %>
      </nav>
    </div>
  </div>
</header>