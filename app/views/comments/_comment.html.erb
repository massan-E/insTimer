<div id="<%= dom_id comment %>" class="bg-gray-50 rounded-lg p-6 hover:shadow-md transition-shadow duration-200">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 rounded-full bg-[#de4848] flex items-center justify-center text-white">
        <%= comment.name.first.upcase %>
      </div>
    </div>
    <div class="flex-grow">
      <p class="font-medium text-gray-900 mb-1"><%= comment.name %></p>
      <p class="text-gray-600"><%= comment.body %></p>
      <p class="text-gray-400 text-sm mt-2">
        <%= time_ago_in_words(comment.created_at) %> ago
      </p>
    </div>
  </div>
</div>