<%= form_with(model: comment, url: countdown_comments_path(countdown), class: "space-y-6") do |form| %>
  <% if comment.errors.any? %>
    <div class="bg-red-50 text-red-500 p-4 rounded-lg mb-6">
      <h2 class="text-lg font-medium mb-2">
        <%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:
      </h2>
      <ul class="list-disc list-inside">
        <% comment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, 
        class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-[#de4848] focus:ring focus:ring-[#de4848] focus:ring-opacity-50" %>
  </div>

  <div>
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :body, rows: 4,
        class: "w-full rounded-lg border-gray-300 shadow-sm focus:border-[#de4848] focus:ring focus:ring-[#de4848] focus:ring-opacity-50" %>
  </div>

  <div>
    <%= form.submit class: "w-full px-6 py-3 bg-[#de4848] text-white rounded-lg hover:bg-[#c43d3d] transition-colors duration-200" %>
  </div>
<% end %>
