<p style="color: green"><%= notice %></p>

<% content_for :title, "Countdowns" %>

<h1>Countdowns</h1>

<div id="countdowns">
  <% @countdowns.each do |countdown| %>
    <%= render countdown %>
    <p>
      <%= link_to "Show this countdown", countdown %>
    </p>
    <br>
  <% end %>
</div>

<%= link_to "New countdown", new_countdown_path %>
