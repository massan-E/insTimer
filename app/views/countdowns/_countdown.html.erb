<div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-200">
  <%= link_to countdown, class: "block" do %>
    <div class="p-6">
      <h2 class="text-xl font-medium text-[#1a1a1a] mb-2 hover:text-[#de4848] transition-colors duration-200">
        <%= countdown.name %>
      </h2>
      <p class="text-gray-600 line-clamp-2"><%= countdown.description %></p>
      <div class="mt-4 flex items-center justify-between text-sm">
        <span class="text-[#de4848] font-medium">
          <%= time_ago_in_words(countdown.target) %> after
        </span>
        <span class="bg-[#de4848]/10 text-[#de4848] px-3 py-1 rounded-full">
          <%= countdown.number_of_cheers %> 応援
        </span>
      </div>
    </div>
  <% end %>
</div>

